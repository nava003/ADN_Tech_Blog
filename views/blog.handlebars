<div class="col-md blog-border">
    <h2>{{blog_title}}</h2>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>

    <div class="col-md">
        <p>{{blog_message}}</p>
    </div>
</div>

<div class="col-md-6 blog-border">
    <h2>Comments:</h2>
    {{#if comments.length}}
        {{#each comments as |comment| }}
            <p>{{comment.user_id.username}} said on {{format_date comment.date_created}}</p>
            <p>{{comment.comment_message}}</p>
        {{/each}}
    {{else}}
        <p>No comments yet! Be the first to comment!</p>
    {{/if}}

    <div class="form-group">
        <label for="comment-message">message:</label>
        <textarea class="form-input" id="comment-message" name="comment-message"></textarea>
    </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Comment!</button>
    </div>
</div>

<script src="./js/comment.js"></script>