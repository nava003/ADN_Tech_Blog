<div class="col-md blog-border">
    <h2>{{blog_title}}</h2>
    <p>Created by {{user.username}} on {{format_date date_created}}</p>

    <div class="col-md">
        <p>{{blog_message}}</p>
    </div>
</div>

<div class="col-md-6 blog-border">
    <h2>Comments:</h2>
    {{#if comments.length}}
        {{#each comments as |comment| }}
            <div class="comment-container">
                <p>{{user.username}} said on {{format_date comment.date_created}}</p>
                <p>{{comment.comment_message}}</p>
            </div>
        {{/each}}
    {{else}}
        <p>No comments yet! Be the first to comment!</p>
    {{/if}}

    <div class="form-group">
        <textarea class="form-input" id="comment-message" name="comment-message" rows="3" cols="40"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="new-comment-button" data-id="{{id}}">Comment!</button>
    </div>
</div>

<script src="/js/comment.js"></script>